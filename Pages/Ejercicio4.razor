@code {
    public string[] alfabeto =
        {"a","b","c","d","e","f","g","h","i","j","k","l","m","n","ñ","o","p","q","r","s","t","u","v","w","x","y","z"};
    List<string>? alfabetoList = new List<string>();
    
    void transformar()
    {
        alfabetoList.Clear();
        foreach (var letra in alfabeto)
        {
            alfabetoList.Add(letra.ToUpper());
        }
    }
}
@page "/ejercicio4"
<div class="container">
    <h1 class="display-6 mb-2">Ejercicio 3</h1>

    <h4> Realizar un programa que transforme todas las letras del alfabeto de mayúsculas a
        minúsculas.</h4>

    <div class="row g-3 mx-5 px-5 my-2">
        <div>
            <button class="btn btn-primary btn-lg float-start" @onclick="transformar">Transformar</button>
        </div>
    </div>
    <div class="row">
        <ul class="col">
            @foreach (var item in alfabeto)
            {
                <li>@item</li>   
            }
        </ul>
        @if(alfabetoList != null){
            <ul class="listaMayusculas col">
                @foreach (var item in alfabetoList)
                {
                    <li>@item</li>
                }
            </ul>
        }
    </div>

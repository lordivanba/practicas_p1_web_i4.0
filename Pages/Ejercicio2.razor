@page "/ejercicio2"
<div class="container">
    <h1 class="display-6 mb-2">Ejercicio 2</h1>

    <h4>Calcular e imprimir la tabla de multiplicar de un número cualquiera. Imprimir el
        multiplicando, el multiplicador y el producto.</h4>

    <div class="row g-3 mx-5 px-5 my-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="number" class="form-control form-control-lg" id="numero" placeholder="a"
                    @bind-value="@numero">
                <label for="numero">Número</label>
            </div>
        </div>
        <div>
            <button class="btn btn-primary btn-lg float-start" @onclick="calcular">Calcular</button>
        </div>
    </div>
</div>

@if (results != null)
{
    <div class="tablamult d-flex justify-content-center">
        <ul>
            @foreach (var result in results)
            {
                <li>@result</li>
            }
        </ul>
    </div>
}


@code {
    public int? numero { get; set; }
    List<string>? results = new List<string>();
    public void calcular()
    {
        results.Clear();
        for (int i = 1; i <= 10; i++)
        {
            var result = $"{numero} x {i} = {numero * i}";
            results.Add(result);
        }
    }
}